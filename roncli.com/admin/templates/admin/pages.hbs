<div class="col-xs-8">
    <div class="panel panel-primary">
        <div class="panel-heading text-center"><h3>Life Features</h3></div>
        <div class="panel-body">
            <div id="feature-list">
                {{#each life.attributes.features}}
                    <div data-id="{{id}}" class="navbar navbar-default feature-container" style="background-color: #eeeeee; border: solid 1px #cccccc;">
                        <div class="container-fluid">
                            <div class="navbar-left" style="margin-right: 20px;">
                                <ul class="nav navbar-nav">
                                    <li class="navbar-text" style="font-size: 20px; padding: 10px 0; color: #000000;">{{title}}</li>
                                </ul>
                            </div>
                            <div class="navbar-right" style="margin-right: 0;">
                                <ul class="nav">
                                    <li>
                                        <button class="btn btn-primary link navbar-btn" style="margin-right: 20px;" data-href="/admin/page{{{url}}}"><span class="glyphicon glyphicon-pencil"></span> Edit</button>
                                        <button class="btn btn-danger navbar-btn remove-life-feature"><span class="glyphicon glyphicon-trash"></span> Remove</button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
            <div class="form-inline">
                <select class="form-control" id="add-life-feature-list">
                    <option value="">-- Select a page to add to life features --</option>
                    {{#each life.attributes.pageList}}
                        {{partial "site/option" value=id text=title}}
                    {{/each}}
                </select>
                <button class="btn btn-primary" id="add-life-feature"><span class="glyphicon glyphicon-share-alt"></span> Add Page to Life Features</button>
            </div>
        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading text-center"><h3>Top Level Pages</h3></div>
        <div class="panel-body">
            <div id="page-list">
                {{#each pages.attributes.pages}}
                    {{partial "admin/pages/page" page=this}}
                {{/each}}
            </div>
            <div class="form-inline">
                <select class="form-control" id="move-page-list">
                    <option value="">-- Select a page to move to the top level --</option>
                    {{#each pages.attributes.pageList}}
                        {{partial "site/option" value=id text=title}}
                    {{/each}}
                </select>
                <button class="btn btn-primary" id="move-page"><span class="glyphicon glyphicon-share-alt"></span> Move Page to Root</button>
            </div>
        </div>
        <div class="panel-body">
            <div id="add-new-page" class="input-group">
                <span class="input-group-addon">URL:</span>
                <input id="add-page-url" type="text" maxlength="1024" class="form-control" placeholder="/your/url/here"/>
                <span class="input-group-btn">
                    <button class="btn btn-primary" id="add-page"><span class="glyphicon glyphicon-plus"></span> Add<span class="hidden-xs"> Root Page</span></button>
                </span>
            </div>
        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading text-center"><h3>Comments to Moderate</h3></div>
        {{#each comments.models}}
            {{partial "admin/pages/comment"}}
        {{/each}}
        {{#ifCond comments.models.length "===" 0}}
            <div class="panel-body">There are no comments pending moderation.</div>
        {{/ifCond}}
    </div>
</div>
<div class="col-sm-2 hidden-xs right-side">
    <div class="panel panel-primary">
        <div class="panel-heading panel-heading-small text-center">Site Administration</div>
        <ol class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="/admin">Admin</a></li>
            <li class="active">Pages</li>
        </ol>
        <div class="panel-body">
            Add or update the pages on the website, and moderate comments made on each page.<br/><br/>
            Please keep in mind that you cannot navigate directly to the URL of this page, nor may you bookmark this page. You must access this page via the Admin menu.
        </div>
    </div>
</div>
