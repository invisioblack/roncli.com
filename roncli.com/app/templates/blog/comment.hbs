{{#each comments}}
    {{#ifCond attributes.blogSource "===" "blogger"}}
        {{partial "blog/comments/blogger"}}
    {{/ifCond}}
    {{#ifCond attributes.blogSource "===" "site"}}
        {{partial "blog/comments/site"}}
    {{/ifCond}}
{{/each}}
<div class="panel-body body">
    <h3 class="text-center">Add Your Comments</h3>
    <div class="vertical-margin"><textarea class="tinymce"></textarea></div>
    <button id="add-blog-comment" class="btn-lg btn-primary center-block">Add Commment</button>
</div>
