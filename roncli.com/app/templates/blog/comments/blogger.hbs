<div class="comment-post panel-body">
    <div class="row">
        <div class="comment-header col-xs-12">
            <div class="comment-author">{{attributes.author.displayName}}</div>
            <div class="comment-date">Posted {{timestampToDate attributes.published}}</div>
        </div>
    </div>
    <div class="comment-body">
        {{{attributes.content}}}
    </div>
</div>
