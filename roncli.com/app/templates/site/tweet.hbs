{{#each models}}
    <div class="tweet">
        <div class="avatar">
            <a href="{{toTwitterProfileUrl attributes.user}}" target="_blank"><img alt="{{attributes.user}} profile" src="{{attributes.avatarUrl}}"/></a>
        </div>
        <div class="text">
            <div class="user">
                <a href="{{toTwitterProfileUrl attributes.user}}" target="_blank">{{attributes.user}}</a>
            </div>
            {{{attributes.html}}}
            <div class="links">
                <a href="{{toTwitterPermanentUrl attributes.user attributes.id}}" target="_blank">{{{toTimeAgo attributes.timestamp}}}</a>
                <a href="{{toTwitterReplyUrl attributes.id}}" target="_blank"><div class="reply" title="Reply"></div></a>
                <a href="{{toTwitterRetweetUrl attributes.id}}" target="_blank"><div class="retweet" title="Retweet"></div></a>
                <a href="{{toTwitterFavoriteUrl attributes.id}}" target="_blank"><div class="favorite" title="Favorite"></div></a>
            </div>
        </div>
    </div>
    {{#unless @last}}<div class="hr"></div>{{/unless}}
{{/each}}
