<div class="col-xs-8 blog constrain-height">
    <div class="btn-group-vertical">
        <a class="btn btn-info" href="/blog">
            <div class="panel-heading panel-title text-center"><h1>Latest Blog Post</h1></div>
        </a>
        {{partial "blog/post" post=blog.attributes.post header="default"}}
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="btn-group-vertical home-panel">
                <a class="btn btn-info" href="/music">
                    <div class="panel-heading panel-title text-center"><h3>Music</h3></div>
                </a>
                <div class="body">
                    <div class="text-center"><h4>Latest</h4></div>
                    <div class="div-table">
                        {{#each songs.models}}
                            <div>
                                <div style="padding-bottom: 2px;">
                                    <a href="{{attributes.url}}">{{attributes.title}}</a>
                                </div>
                                <div style="padding: 0 0 2px 5px; width: 1px;">
                                <button class="btn btn-xs btn-primary add-to-media-player" style="font-size: 12px; white-space: nowrap;" data-source="soundcloud" data-url="{{attributes.audioUrl}}"><span class="glyphicon glyphicon-plus"></span><span class="glyphicon glyphicon-music"></span></button>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                    <br />
                    <div class="text-center"><a href="/music/tag/Classic"><h4>Classics</h4></a></div>
                    <div class="div-table">
                        {{#each classics.models}}
                            <div>
                                <div style="padding-bottom: 2px;">
                                    <a href="{{attributes.url}}">{{attributes.title}}</a>
                                </div>
                                <div style="padding: 0 0 2px 5px; width: 1px;">
                                    <button class="btn btn-xs btn-primary add-to-media-player" style="font-size: 12px; white-space: nowrap;" data-source="soundcloud" data-url="{{attributes.audioUrl}}"><span class="glyphicon glyphicon-plus"></span><span class="glyphicon glyphicon-music"></span></button>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="btn-group-vertical home-panel">
                <a class="btn btn-info" href="/coding">
                    <div class="panel-heading panel-title text-center"><h3>Coding</h3></div>
                </a>
                <div class="body">
                    <div class="text-center">
                        <h4>Featured Projects</h4>
                        {{#each projects.models}}
                            <a href="{{attributes.url}}">{{attributes.title}}</a><br />
                        {{/each}}
                    </div><br />
                    <div class="text-center"><h4>Recent GitHub Activity</h4></div>
                    {{#each codingEvents.models}}
                        <div class="div-table" style="margin-bottom: 2px;">
                            <div>
                                <div>
                                    <div style="display: table; table-layout: fixed; width: 100%;">
                                        <span style="display: table-cell; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; line-height: 1.1;">
                                            {{#ifCond attributes.type "===" "push"}}
                                                {{attributes.message}}
                                            {{/ifCond}}
                                            {{#ifCond attributes.type "===" "release"}}
                                                Released {{attributes.release}}
                                            {{/ifCond}}
                                        </span>
                                    </div>
                                </div>
                                <div style="padding-left: 5px; width: 1px; white-space: nowrap;">
                                    {{#if attributes.url}}
                                        <a href="{{attributes.url}}">{{attributes.repository}}</a>
                                    {{else}}
                                        <a href="https://github.com/{{attributes.repository}}" target="_blank">{{attributes.repository}}</a>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="btn-group-vertical home-panel">
                <a class="btn btn-info" href="/gaming">
                    <div class="panel-heading panel-title text-center"><h3>Gaming</h3></div>
                </a>
                <div class="body">
                    <div>
                        <div class="div-table" style="margin-bottom: 5px;">
                            <div>
                                <div class="hidden-sm" style="vertical-align: top; width: 55px;">
                                    <div style="width: 50px; height: 50px; background-image: url('{{wow.attributes.character.thumbnail}}'); background-size: 50px 50px; display: inline-block;"></div>
                                </div>
                                <div style="vertical-align: top;">
                                    <div class="text-center"><h4>World of Warcraft</h4></div>
                                    <div>{{wow.attributes.character.achievementPoints}} achievement points</div>
                                    {{#ifCond wow.attributes.feedItem.type "===" "BOSSKILL"}}
                                        Defeated <b>{{wow.attributes.feedItem.boss}}</b>
                                    {{/ifCond}}
                                    {{#ifCond wow.attributes.feedItem.type "===" "LOOT"}}
                                        <div style="width: 20px; height: 20px; background-size: 20px 20px; background-image: url('http://us.media.blizzard.com/wow/icons/56/{{wow.attributes.feedItem.icon}}.jpg'); display: inline-block;"></div>
                                        <div style="display: inline-block;">
                                            Looted <b>{{wow.attributes.feedItem.item}}</b>
                                        </div>
                                    {{/ifCond}}
                                    {{#ifCond wow.attributes.feedItem.type "===" "ACHIEVEMENT"}}
                                        <div style="width: 20px; height: 20px; background-size: 20px 20px; background-image: url('http://us.media.blizzard.com/wow/icons/56/{{wow.attributes.feedItem.icon}}.jpg'); display: inline-block;"></div>
                                        <div style="display: inline-block;">
                                            Earned <b>{{wow.attributes.feedItem.achievement}}</b>
                                        </div>
                                    {{/ifCond}}<br />
                                    {{{toTimeAgo wow.attributes.feedItem.timestamp}}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="div-table" style="margin-bottom: 5px;">
                            <div>
                                <div class="hidden-sm" style="vertical-align: top; width: 55px;">
                                    <div style="width: 50px; height: 50px; background-image: url('/images/d3.png'); background-size: 50px 50px; display: inline-block;"></div>
                                </div>
                                <div style="vertical-align: top;">
                                    <div class="text-center"><h4>Diablo III</h4></div>
                                    {{#if d3.attributes.seasonal}}Seasonal {{/if}}
                                    {{#if d3.attributes.hardcore}}Hardcore {{/if}}
                                    {{d3.attributes.class}} <b>{{d3.attributes.name}}</b><br />
                                    Paragon {{d3.attributes.paragonLevel}} - {{d3.attributes.damage}} Damage<br />
                                    {{d3.attributes.eliteKills}} elite kills<br />
                                    {{{toTimeAgo d3.attributes.lastUpdated}}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="div-table" style="margin-bottom: 5px;">
                            <div>
                                <div class="hidden-sm" style="vertical-align: top; width: 55px;">
                                    <div style="width: 50px; height: 50px; background-image: url('{{lol.attributes.champion.image}}'); background-size: 50px 50px; display: inline-block;"></div>
                                </div>
                                <div style="vertical-align: top;">
                                    <div class="text-center"><h4>League of Legends</h4></div>
                                    {{lol.attributes.ranked.tier}} {{lol.attributes.ranked.division}} {{lol.attributes.ranked.leaguePoints}} LP, {{lol.attributes.ranked.wins}}-{{lol.attributes.ranked.losses}}<br/>
                                    Last game: {{#if lol.attributes.game.winner}}<span class="text-success">Won</span>{{else}}<span class="text-danger">Lost</span>{{/if}} -
                                    {{lol.attributes.game.matchDuration.minutes}}:{{lol.attributes.game.matchDuration.seconds}}<br />
                                    <b>{{lol.attributes.champion.name}}</b> - {{lol.attributes.game.kills}}/{{lol.attributes.game.deaths}}/{{lol.attributes.game.assists}} - {{lol.attributes.game.goldPerMinute}} GPM<br />
                                    {{{toTimeAgo lol.attributes.game.matchCreation}}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="div-table" style="margin-bottom: 5px;">
                            <div>
                                <div class="hidden-sm" style="vertical-align: top; width: 55px;">
                                    <div style="width: 50px; height: 50px; background-image: url('/images/descentLogo.png'); background-size: 50px 50px; display: inline-block;"></div>
                                </div>
                                <div style="vertical-align: top;">
                                    <div class="text-center"><h4>Descent Champions Ladder</h4></div>
                                    <span class="dcl-{{dcl.attributes.rating}}">{{titleCase dcl.attributes.rating}} #{{dcl.attributes.rank}}</span><br />
                                    <span class="dcl-gold" style="white-space: nowrap;">Gold: {{dcl.attributes.records.gold.wins}}-{{dcl.attributes.records.gold.losses}}</span> <span class="dcl-silver" style="white-space: nowrap;">Silver: {{dcl.attributes.records.silver.wins}}-{{dcl.attributes.records.silver.losses}}</span> <span class="dcl-bronze" style="white-space: nowrap;">Bronze: {{dcl.attributes.records.bronze.wins}}-{{dcl.attributes.records.bronze.losses}}</span> <span class="dcl-unrated" style="white-space: nowrap;">Unrated: {{dcl.attributes.records.unrated.wins}}-{{dcl.attributes.records.unrated.losses}}</span><br />
                                    Last game:
                                    {{#ifCond dcl.attributes.match.pilot.score ">" dcl.attributes.match.opponent.score}}
                                        <span class="text-success">roncli <b>{{dcl.attributes.match.pilot.score}}</b> - {{dcl.attributes.match.opponent.name}} <b>{{dcl.attributes.match.opponent.score}}</b></span>
                                    {{else}}
                                        <span class="text-danger">{{dcl.attributes.match.opponent.name}} <b>{{dcl.attributes.match.opponent.score}}</b>, roncli <b>{{dcl.attributes.match.pilot.score}}</b></span>
                                    {{/ifCond}}
                                    {{dcl.attributes.match.game}} {{dcl.attributes.match.map}}<br />
                                    {{{toTimeAgo dcl.attributes.match.date}}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="btn-group-vertical home-panel">
                <a class="btn btn-info" href="/coding">
                    <div class="panel-heading panel-title text-center"><h3>Life</h3></div>
                </a>
                <div class="body">
                    <div class="text-center">
                        <h4>Featured Articles</h4>
                        {{#each life.models}}
                            <a href="{{attributes.url}}">{{attributes.title}}</a><br />
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-sm-2 hidden-xs right-side">
    <div class="panel panel-primary">
        <div class="panel-heading panel-heading-small text-center">Welcome</div>
        <div class="panel-body">
            <img src="/images/roncliSmall.png" class="icon" />Hello! You've found the homepage of me, Ronald M. Clifford, also known as <b>roncli</b> or <b>The Nightstalker</b>.<br /><br />
            Here, you can check out my music, browse my coding projects, follow along with what games I'm playing, and check out everything else that makes life worth living.
        </div>
    </div>
    {{partial "site/share"}}
</div>

